<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/raleway_extrabold"
        android:text="@string/title_navigation"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/title"
        android:textSize="@dimen/h2"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_exit_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        app:cardBackgroundColor="@color/button_primary__background"
        app:contentPaddingTop="13dp"
        app:contentPaddingRight="20dp"
        app:contentPaddingBottom="13dp"
        app:contentPaddingLeft="20dp"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/icon_font"
                android:text="@string/icon_cross"
                android:textColor="@color/button_primary__icon"
                android:textSize="@dimen/button_icon_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_exit_navigation"
                android:fontFamily="@font/sen_bold"
                android:textSize="@dimen/button_font_size"
                android:textAllCaps="true"
                android:textColor="@color/button_primary__text"
                android:layout_marginStart="6dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>