<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/interest_point"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:minWidth="200dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="6dp"
    android:elevation="0dp"
    app:contentPadding="20dp"
    app:cardBackgroundColor="@color/snow"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">

            <TextView android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semi_bold"
                android:textSize="@dimen/h4"
                android:textColor="@color/blue_darkest"
                android:text="Point of Interest 1"/>

            <TextView android:id="@+id/interest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/raleway_semi_bold"
                android:textSize="@dimen/small_font_size"
                android:textColor="@color/blue_light"
                android:text="Type of building - Type of interest"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/delete_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:contentPadding="8dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/button_primary__icon">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/icon_font"
                    android:text="@string/icon_trash"
                    android:textColor="@color/snow"
                    android:textSize="@dimen/button_icon_size_medium" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>