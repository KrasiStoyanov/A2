<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_Black">

    <LinearLayout
        android:id="@+id/notification_icon_holder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end"
        android:background="@color/transparent_Black"
        android:src="@drawable/border">

        <ImageButton
            android:id="@+id/button_popup"
            android:layout_width="69dp"
            android:layout_height="63dp"
            android:background="@color/transparent_Black"
            android:src="@drawable/ic_notifications_black_18dp">

        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_holder"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/notification_icon_holder"
        android:layout_marginTop="-1dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/navigation_message_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/distance_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:fontFamily="@font/raleway_extrabold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blue"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/navigation_text"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/raleway_extrabold"

                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/imageView"
            android:layout_width="136dp"
            android:layout_height="119dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/button_primary__background"
            app:cardCornerRadius="20dp"
            app:contentPadding="13dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_back_black_18dp">


                </ImageView>
            </LinearLayout>

            >
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>